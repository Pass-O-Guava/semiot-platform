<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SystemSettings</servlet-name>
        <jsp-file>/config/SystemSettings.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>DriversInstalled</servlet-name>
        <jsp-file>/config/DriversInstalled.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>UploadDriver</servlet-name>
        <jsp-file>/config/UploadDriver.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AvailableDrivers</servlet-name>
        <jsp-file>/config/AvailableDrivers.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ConfigurationDriver</servlet-name>
        <jsp-file>/config/ConfigurationDriver.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>index</servlet-name>
        <jsp-file>/index.html</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>notConnect</servlet-name>
        <jsp-file>/notConnect.html</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AdminPanel</servlet-name>
        <jsp-file>/config/AdminPanel.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <jsp-file>/login.html</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AccessDenied</servlet-name>
        <jsp-file>/error.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccessDenied</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SystemSettings</servlet-name>
        <url-pattern>/configuration/SystemSettings</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DriversInstalled</servlet-name>
        <url-pattern>/configuration/DriversInstalled</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadDriver</servlet-name>
        <url-pattern>/config/UploadDriver</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AvailableDrivers</servlet-name>
        <url-pattern>/configuration/AvailableDrivers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfigurationDriver</servlet-name>
        <url-pattern>/configuration/ConfigurationDriver</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>notConnect</servlet-name>
        <url-pattern>/notConnect</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminPanel</servlet-name>
        <url-pattern>/configuration/AdminPanel</url-pattern>
    </servlet-mapping>


     <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.jpg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
     <servlet-name>default</servlet-name>
        <url-pattern>*.png</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.css</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.js</url-pattern>
    </servlet-mapping>


    <security-role>
        <role-name>admin</role-name>
        <role-name>user</role-name>
    </security-role>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Access to configuration</web-resource-name>
            <url-pattern>/config/*</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/login</form-login-page>
            <form-error-page>/error</form-error-page>
        </form-login-config>
    </login-config>

</web-app>

