@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ssn: <http://purl.oclc.org/NET/ssnx/ssn#> .
@prefix mcht: <http://purl.org/NET/ssnext/machinetools#> .
@prefix ssncom: <http://purl.org/NET/ssnext/communication#> .
@prefix saref: <http://ontology.tno.nl/saref#> .
@prefix qudt: <http://www.qudt.org/qudt/owl/1.0.0/qudt/#> .

<http://${DOMAIN}/systems/${DEVICE_HASH}> a mcht:MachineTool ;
    rdfs:label "Machine Tool #${DEVICE_HASH}"@en ;
    ssn:hasSubSystem <http://${DOMAIN}/systems/${DEVICE_HASH}/machinetool> ;
    saref:hasState saref:OnState .
    
<http://${DOMAIN}/systems/${DEVICE_HASH}/machinetool>  a ssn:SensingDevice ;
    ssn:observes mcht:MachineToolWorkingState ;
    ssn:hasMeasurementCapability [
        a ssn:MeasurementCapability ;
        ssn:forProperty mcht:MachineToolWorkingState ;
        ssn:hasMeasurementProperty [
            a qudt:Unit ;
            ssn:hasValue [
                a qudt:Enumeration ;
                ssn:hasValue mcht:MachineToolWorkingStateValue ;
            ] ;
        ] ;
    ] ;
    ssncom:hasCommunicationEndpoint <http://${DOMAIN}/systems/topic=${DEVICE_HASH}.machinetool.obs> .

<http://${DOMAIN}/systems/topic=${DEVICE_HASH}.machinetool.obs> a ssncom:CommunicationEndpoint ;
    ssncom:protocol "WAMP" .
